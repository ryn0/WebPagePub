@model WebPagePub.WebApp.Models.Author.AuthorPhotoUploadModel
@{
    ViewBag.Title = "Upload Photo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section>
    <div class="container">
 
        <h3>@ViewBag.Title</h3>

        @using (Html.BeginForm("UploadPhoto", "AuthorManagement", FormMethod.Post,
               new { enctype = "multipart/form-data" }))
{

    @Html.HiddenFor(x => x.AuthorId)

    <fieldset>
      
        <div class="editor-field">
     
            <input type="file"  name="file" />
            <br /><br />
        </div>
        <div class="editor-field">
            <input class="btn btn-success " type="submit" value="Upload" />
        </div>
    </fieldset>
}

    </div>
</section>