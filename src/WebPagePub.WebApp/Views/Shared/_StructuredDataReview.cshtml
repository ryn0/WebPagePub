@model StructureDataReviewModel
@using Newtonsoft.Json;
@using WebPagePub.WebApp.Models.StructuredData;

@if (Model != null)
{
    <script type="application/ld+json">
        @Html.Raw(JsonConvert.SerializeObject(Model))
    </script>

    <br />

    <div property="reviewRating" typeof="http://schema.org/Rating">
        <meta property="bestRating" content="@Model.ReviewRating.BestRating">
        <meta property="worstRating" content="@Model.ReviewRating.WorstRating">
        <b>Overall Rating:</b>
        <span property="ratingValue">@Model.ReviewRating.RatingValue</span>

        <div class="star-ratings-css">
            <div class="star-ratings-css-top" style="width:@Model.ReviewRating.RatingPercentage%"><span>★</span><span>★</span><span>★</span><span>★</span><span>★</span></div>
            <div class="star-ratings-css-bottom"><span>★</span><span>★</span><span>★</span><span>★</span><span>★</span></div>
        </div>

    </div>

    <br />
}