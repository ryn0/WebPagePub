@model WebPagePub.WebApp.Models.SitePage.SitePageCommentModel

<form asp-action="Comment" method="post">
    @Html.AntiForgeryToken()

    @* your existing fields *@
    <input type="hidden" asp-for="SitePageId" />
    <input type="hidden" asp-for="RequestId" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="form-group">
        <label asp-for="Website"></label>
        <input class="form-control" asp-for="Website" />
        <span class="text-danger" asp-validation-for="Website"></span>
    </div>

    <div class="form-group">
        <label asp-for="Comment"></label>
        <textarea class="form-control" asp-for="Comment" rows="6"></textarea>
        <span class="text-danger" asp-validation-for="Comment"></span>
    </div>

    @{
        var captchaCtx = $"comment:{Model?.SitePageId ?? 0}";
    }
    @await Html.PartialAsync("_CaptchaBlock", captchaCtx)

    <button type="submit" class="btn btn-primary">Post Comment</button>
</form>
